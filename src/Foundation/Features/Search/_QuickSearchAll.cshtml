@using EPiServer.Find.Api
@using EPiServer.Find.UnifiedSearch

@model Foundation.Demo.ViewModels.DemoSearchViewModel<SearchPage>
@{
    Layout = null;
}

@{
    if (Model.ShowProductSearchResults)
    {
        Html.RenderPartial("_QuickSearch", Model.ProductViewModels);
    }
    if (Model.ShowContentSearchResults)
    {
        Html.RenderPartial("_QuickSearchContent", Model);
    }
}
